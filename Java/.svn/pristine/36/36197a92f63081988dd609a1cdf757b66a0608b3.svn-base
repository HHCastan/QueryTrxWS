log4j.rootLogger=INFO, console, consultaSaldos
#log4j.logger.com.fla.consultaSaldos=DEBUG, consultaSaldos

# log
log4j.appender.consultaSaldos=org.apache.log4j.RollingFileAppender
log4j.appender.consultaSaldos.File=S:/TMP/ConsultaSaldos.log
log4j.appender.consultaSaldos.MaxFileSize=2MB
log4j.appender.consultaSaldos.MaxBackupIndex=5 
log4j.appender.consultaSaldos.layout=org.apache.log4j.PatternLayout
log4j.appender.consultaSaldos.layout.ConversionPattern=<%d{dd-MMM-yyyy HH:mm:ss,SSS}> [%-5p] [%C{1}] - %m%n

log4j.appender.console=org.apache.log4j.ConsoleAppender
log4j.appender.console.Target=System.out
log4j.appender.console.layout=org.apache.log4j.PatternLayout
log4j.appender.console.layout.ConversionPattern=<%d{dd-MMM-yyyy HH:mm:ss,SSS}> [%-5p] [%C{1}] - %m%n
