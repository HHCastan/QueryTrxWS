log4j.rootLogger=DEBUG, console, canopus

# log
log4j.appender.canopus=org.apache.log4j.RollingFileAppender
log4j.appender.canopus.File=C:/TMP/canopus.log
log4j.appender.canopus.MaxFileSize=2MB
log4j.appender.canopus.MaxBackupIndex=5 
log4j.appender.canopus.layout=org.apache.log4j.PatternLayout
log4j.appender.canopus.layout.ConversionPattern=<%d{dd-MMM-yyyy HH:mm:ss,SSS}> [%-5p] [%C{1}] - %m%n

log4j.appender.console=org.apache.log4j.ConsoleAppender
log4j.appender.console.Target=System.out
log4j.appender.console.layout=org.apache.log4j.PatternLayout
log4j.appender.console.layout.ConversionPattern=<%d{dd-MMM-yyyy HH:mm:ss,SSS}> [%-5p] [%C{1}] - %m%n

log4j.logger.com.fla.canopus=DEBUG, canopus
log4j.logger.httpclient.wire=DEBUG
